<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Khaki"
    android:id="@+id/RecNoteLayout2" >

    <TableRow
        android:id="@+id/tableRow21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Brown"
        android:padding="@dimen/activity_horizontal_margin" >

        <TableRow
            android:id="@+id/tableRow22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/editRecordTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:ems="10"
                android:hint="@string/titlehint"
                android:inputType="text"
                android:padding="10dp" >

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" >

            <ImageButton
                android:id="@+id/imageRecordColor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Yellow"
                android:contentDescription="@string/notecolor"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:src="@drawable/bg_widget_normal_low" />

        </TableRow>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/editLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/edit_mode" />

        <TextView
            android:id="@+id/dateTimeLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_time_label"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/addCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            android:src="@drawable/add_col"
            android:contentDescription="@string/addcolumn" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TableLayout
            android:id="@+id/ColumnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2" >

            <TableRow
                android:id="@+id/tableRow27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/rowAddImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/addcolumn"
                    android:paddingLeft="30dp"
                    android:src="@drawable/ic_mp_move" />

                <EditText
                    android:id="@+id/editColTitle"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/column" />

                <ImageButton
                    android:id="@+id/imageDel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/del"
                    android:src="@drawable/ic_delete" />

            </TableRow>
            
        </TableLayout>
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:id="@+id/ColumnLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2" >

            <TableRow
                android:id="@+id/tableRow29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/rowAddImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/addcolumn"
                    android:paddingLeft="30dp"
                    android:src="@drawable/ic_mp_move" />

                <EditText
                    android:id="@+id/editColTitle1"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:hint="@string/column" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/column_options" />

                <ImageButton
                    android:id="@+id/imageDel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/del"
                    android:src="@drawable/ic_delete" />

            </TableRow>
        </TableLayout>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" >

        <ImageButton
            android:id="@+id/addCol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/add_col"
            android:contentDescription="@string/addcolumn" />

    </TableRow>

</TableLayout>
